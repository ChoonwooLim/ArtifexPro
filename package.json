{
  "name": "artifex-pro",
  "version": "1.0.0",
  "productName": "ArtifexPro Studio",
  "description": "Professional AI-Powered Video Generation & Editing Suite",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "preview": "electron .",
    "start": "electron .",
    "package": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "lint": "eslint src/",
    "python:setup": "pip install -r requirements.txt",
    "python:server": "python src/backend/server.py"
  },
  "keywords": [
    "video-editor",
    "ai-generation",
    "wan2.2",
    "electron",
    "professional"
  ],
  "author": "ArtifexPro Team",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@fortawesome/fontawesome-free": "^6.5.1",
    "axios": "^1.6.5",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.2",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11"
  },
  "build": {
    "appId": "com.artifexpro.studio",
    "productName": "ArtifexPro Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "!**/.vscode/*",
      "!src/*",
      "!wan/**/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
      "!{.env,.env.*,.npmrc,pnpm-lock.yaml}"
    ],
    "asarUnpack": [
      "resources/**",
      "src/backend/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "resources/icon.png",
      "category": "AudioVideo"
    }
  }
}